<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/myriad_pro</item>
    </style>

    <style name="AppTheme.Material" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/myriad_pro</item>
    </style>

    <!-- changes made by jason jing// remove if buggy-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/myriad_pro</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- end of changes-->

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorControlNormal">@color/colorSecondary</item>
        <item name="android:textColorPrimary">@color/colorSecondary</item>
    </style>

    <style name="ThinnerChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipMinHeight">20dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/myriad_pro</item>
    </style>

    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabRippleColor">@color/transparent</item>
        <item name="tabIndicatorColor">@color/transparent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabIconTint">@null</item>
        <item name="tabSelectedTextColor">@color/colorSecondary</item>
    </style>
    <style name="ChipTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AmenityChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipCornerRadius">4dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="chipBackgroundColor">@color/bg_chip_state_list</item>
        <item name="iconEndPadding">2dp</item>
        <item name="iconStartPadding">4dp</item>
        <item name="textStartPadding">0dp</item>
        <item name="chipIconEnabled">true</item>
        <item name="textEndPadding">0dp</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipIconTint">@color/bg_chip_state_list</item>
        <item name="chipStrokeColor">@color/bg_chip_state_list</item>
        <item name="android:layout_height">33dp</item>
        <item name="chipIconSize">14dp</item>
        <item name="android:radius">3dp</item>
        <item name="android:textColor">@color/text_chip_state_list</item>
        <item name="chipMinTouchTargetSize">0dp</item>

    </style>

    <style name="CollapseToolbarExpandedTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapseToolbarCollapsedTitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ClickableText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MoreInfoItem" parent="ClickableText">
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="SectionTitle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
