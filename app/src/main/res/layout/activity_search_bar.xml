<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SearchBarLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchBarActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/searchBarCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:layout_alignParentTop="true"
        app:cardElevation="8dp">

        <SearchView
            android:id="@+id/actual_search_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:iconifiedByDefault="false"
            android:queryBackground="@android:color/transparent"
            android:queryHint="Search Here"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/amennityCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="96dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"

        android:layout_alignParentTop="true"
        app:cardElevation="8dp">

        <LinearLayout
            android:id="@+id/amenityLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/amentityIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="14dp"
                android:src="@drawable/filter_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"

                android:text="Amenities"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/place_tags"
                android:layout_width="242dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                app:chipSpacingHorizontal="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:singleLine="false">

                <com.google.android.material.chip.Chip
                    android:id="@+id/bathroom"
                    style="@style/AmenityChip"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    app:checkedIconVisible="false"
                    app:chipIcon="@drawable/g1"
                    app:chipIconEnabled="true"
                    app:chipIconSize="13dp"
                    app:chipMinTouchTargetSize="0dp" />

                <com.google.android.material.chip.Chip
                    style="@style/AmenityChip"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    app:checkedIconVisible="false"
                    app:chipIcon="@drawable/g2"

                    app:chipIconEnabled="true"
                    app:chipIconSize="14dp" />

                <com.google.android.material.chip.Chip
                    style="@style/AmenityChip"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    app:checkedIconVisible="false"
                    app:chipIcon="@drawable/g3"
                    app:chipIconEnabled="true"
                    app:chipIconSize="13dp" />

                <com.google.android.material.chip.Chip
                    style="@style/AmenityChip"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    app:checkedIconVisible="false"
                    app:chipIcon="@drawable/g4"
                    app:chipIconEnabled="true"
                    app:chipIconSize="13dp" />

                <com.google.android.material.chip.Chip
                    style="@style/AmenityChip"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    app:checkedIconVisible="false"
                    app:chipIcon="@drawable/g5"
                    app:chipIconEnabled="true"
                    app:chipIconSize="13dp" />


            </com.google.android.material.chip.ChipGroup>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/placesCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="24dp"
        android:layout_alignParentRight="true"

        android:layout_marginBottom="26dp"

        android:layout_marginEnd="24dp"
        android:layout_marginTop="190dp"
        android:paddingBottom="26dp"
        app:cardCornerRadius="3dp"
        android:layout_alignParentTop="true"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/title_places"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/places_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"

                android:text="Search Results"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="50dp"
            android:background="@color/divider" />

        <ListView
            android:id="@+id/searchHintList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="51dp"
            app:layout_constraintTop_toBottomOf="@id/searchBarCardView" />

    </androidx.cardview.widget.CardView>


</RelativeLayout>
