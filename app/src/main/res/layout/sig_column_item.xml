<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/column_card_size"
    android:layout_height="370dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/column_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/column_card_size"
        app:cardCornerRadius="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/column_top_image"
            android:layout_width="@dimen/column_card_size"
            android:layout_height="@dimen/column_card_size"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/column_top_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:text="Description"
            android:textSize="15sp"
            android:textColor="#FFFFFF"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/column_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/column_card_size"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/column_top">

        <ImageView
            android:id="@+id/column_bottom_image"
            android:layout_width="@dimen/column_card_size"
            android:layout_height="@dimen/column_card_size"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/column_bottom_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:text="Description"
            android:textSize="15sp"
            android:textColor="#FFFFFF"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>