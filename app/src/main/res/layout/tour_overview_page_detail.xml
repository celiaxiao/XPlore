<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tour_overview_page_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="240dp"
        android:layout_height="84dp"
        android:layout_marginStart="89dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/testTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_delete_button_tour_overview_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#182B49"
        app:borderWidth="0dp"
        app:fabCustomSize="34dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vertical_line1"
        app:srcCompat="@drawable/ic_remove_white_8dp"
        app:maxImageSize="14dp"/>

    <View
        android:id="@+id/vertical_line1"
        android:layout_width="1dp"
        android:layout_height="27dp"
        android:background="@color/grey"
        app:layout_constraintBottom_toTopOf="@id/fab_delete_button_tour_overview_page"
        app:layout_constraintEnd_toEndOf="@id/fab_delete_button_tour_overview_page"
        app:layout_constraintStart_toStartOf="@id/fab_delete_button_tour_overview_page"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/vertical_line2"
        android:layout_width="1dp"
        android:layout_height="27dp"
        android:layout_marginTop="8dp"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/fab_delete_button_tour_overview_page"
        app:layout_constraintStart_toStartOf="@id/fab_delete_button_tour_overview_page"
        app:layout_constraintTop_toBottomOf="@id/fab_delete_button_tour_overview_page"/>

</androidx.constraintlayout.widget.ConstraintLayout>