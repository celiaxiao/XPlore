<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DuringTourActivity"
    android:background="#182B49">

    <ImageView
        android:id="@+id/imageViewDuringTour"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.375"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:foreground="@drawable/trending_gradient_shape"
        />


    <TextView
        android:id="@+id/tourNameTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:autoSizeTextType="uniform"
        android:text="Tour Name"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintDimensionRatio="15:1"
        app:layout_constraintHeight_percent="0.025"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewDuringTour" />

    <TextView
        android:id="@+id/tourOverviewTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="3dp"
        android:autoSizeTextType="uniform"
        android:clickable="true"
        android:text="Tour Overview"
        android:textColor="#FECE07"
        android:textSize="14sp"
        app:layout_constraintDimensionRatio="6.5:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.025"
        app:layout_constraintStart_toEndOf="@+id/tourNameTextView"
        app:layout_constraintTop_toTopOf="@id/tourNameTextView" />

    <TextView
        android:id="@+id/stopNameTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:autoSizeTextType="uniform"
        android:text="Stop Name"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintDimensionRatio="12:1"
        app:layout_constraintHeight_percent="0.038"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tourNameTextView" />

    <TextView
        android:id="@+id/previousStopTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:autoSizeTextType="uniform"
        android:clickable="true"
        android:text="Previous Stop"
        android:textColor="#FECE07"
        app:layout_constraintBottom_toTopOf="@id/cardViewDuringTour"
        app:layout_constraintDimensionRatio="7:1"
        app:layout_constraintHeight_percent="0.025"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stopNameTextView" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewDuringTour"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.81"
        app:layout_constraintHeight_percent="0.357"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nextStopButton"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#2B4266" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/stopDescriptionTextView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.89"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:text="Stop Description"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:scrollbars="vertical"
                />

            <ImageView
                android:id="@+id/restroomIconDuringTourImageView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/stopDescriptionTextView"
                app:layout_constraintBottom_toTopOf="@id/directionsButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_percent="0.07"
                app:layout_constraintDimensionRatio="1:1"
                android:layout_marginStart="20dp"

                android:src="@drawable/g1"
                />

            <ImageView
                android:id="@+id/cafeIconDuringTourImageView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@id/restroomIconDuringTourImageView"
                app:layout_constraintStart_toEndOf="@id/restroomIconDuringTourImageView"
                app:layout_constraintWidth_percent="0.07"
                app:layout_constraintDimensionRatio="1:1"
                android:layout_marginStart="5dp"

                android:src="@drawable/g2"
                />

            <ImageView
                android:id="@+id/restaurantIconDuringTourImageView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@id/restroomIconDuringTourImageView"
                app:layout_constraintStart_toEndOf="@id/cafeIconDuringTourImageView"
                app:layout_constraintWidth_percent="0.07"
                app:layout_constraintDimensionRatio="1:1"
                android:layout_marginStart="5dp"

                android:src="@drawable/g3"
                />

            <ImageView
                android:id="@+id/busstopIconDuringTourImageView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@id/restroomIconDuringTourImageView"
                app:layout_constraintStart_toEndOf="@id/restaurantIconDuringTourImageView"
                app:layout_constraintWidth_percent="0.07"
                app:layout_constraintDimensionRatio="1:1"
                android:layout_marginStart="5dp"

                android:src="@drawable/g4"
                />

            <ImageView
                android:id="@+id/parkinglotIconDuringTourImageView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@id/restroomIconDuringTourImageView"
                app:layout_constraintStart_toEndOf="@id/busstopIconDuringTourImageView"
                app:layout_constraintWidth_percent="0.07"
                app:layout_constraintDimensionRatio="1:1"
                android:layout_marginStart="5dp"

                android:src="@drawable/g5"
                />

            <Button
                android:id="@+id/directionsButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintWidth_percent="0.32"
                app:layout_constraintDimensionRatio="3:1"
                android:background="@drawable/ic_round_corner_button"
                android:text="Directions"
                android:textSize="15sp"
                android:textAllCaps="false"
                />

            <TextView
                android:id="@+id/detailsTextViewDuringTour"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.143"
                app:layout_constraintDimensionRatio="2.4:1"
                app:layout_constraintBottom_toBottomOf="@id/directionsButton"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="26dp"
                android:autoSizeTextType="uniform"
                android:textColor="#FECE07"
                android:text="Details"
                android:clickable="true"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/nextStopButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="20dp"
        android:background="#027EB1"
        android:text="Next Stop"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="8:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.81" />


    <View
        android:id="@+id/yellowLineViewDuringTour"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.011"
        app:layout_constraintTop_toTopOf="@id/cardViewDuringTour"
        app:layout_constraintStart_toEndOf="@id/cardViewDuringTour"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#FECE07"
        />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.07"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@id/cardViewDuringTour"
        app:layout_constraintBottom_toBottomOf="@id/cardViewDuringTour"
        app:layout_constraintStart_toStartOf="@id/yellowLineViewDuringTour"
        app:layout_constraintEnd_toEndOf="@id/yellowLineViewDuringTour"


        android:src="@drawable/dot"
        />





</androidx.constraintlayout.widget.ConstraintLayout>