<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView
        android:id="@+id/gifImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        app:layout_constraintWidth_percent="0.88"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/gifNameTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/myriad_pro"
        android:text="Title"
        android:textAlignment="center"
        android:textColor="#162B49"
        android:textStyle="bold"
        android:autoSizeTextType="uniform"
        android:textSize="22sp"
        app:layout_constraintDimensionRatio="10:1"
        app:layout_constraintWidth_percent="0.586"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gifImageView" />

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="19dp"
        android:text="Descriptions"
        android:textAlignment="center"
        android:textSize="18sp"
        android:autoSizeTextType="uniform"
        app:layout_constraintWidth_percent="0.919"
        app:layout_constraintDimensionRatio="8.71:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gifNameTextView"
        android:lineSpacingExtra="5sp"/>


</androidx.constraintlayout.widget.ConstraintLayout>