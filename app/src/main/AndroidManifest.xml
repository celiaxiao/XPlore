<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.example.navucsd">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

		<!-- Main page; main entry of the app -->
		<activity android:name=".MainPageActivity"
			android:theme="@style/AppTheme.Material">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<!-- Other pages -->
		<activity
			android:name=".PlacesActivity"
			android:label="@string/title_activity_encyclopedia"
			android:theme="@style/AppTheme.Material" />
		<activity android:name=".SearchBarActivity"/>
        <activity android:name=".NavigationActivity"/>
		<activity android:name=".LandmarkDetailsActivity"
            android:theme="@style/AppTheme.Material"/>
        <activity android:name=".TourActivity" />
    </application>


</manifest>